doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side javaScript
    ul
      each row in topics
        li
          a(href='/topic/'+row.id)= row.title
    article
      form(action='/topic/'+row.id+'/edit' method='post')
        p
          input(type='text' name='title' value= row.title placeholder='title')
        p
          textarea(name='description'  placeholder='description')
            =row.description
        p
          input(type='text' name='author' value=row.author placeholder='author')
        p
          input(type='submit')
    ul
      li
        a(href='/topic/add') add

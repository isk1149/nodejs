doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side javaScript
    ul
      each row in topics
        li
          a(href='/topic/'+row.id)= row.title
    article
      h1= 'Delete? '+row.title
      form(action='/topic/'+row.id+'/delete' method='post')
        p
          input(type='submit', value='yes')
        a(href='/topic/'+row.id) no
